*
  box-sizing border-box

html
  font-family 'Avenir'
  font-size unit($baseFontSize, 'px')

  @media screen and (max-width: 768px)
    font-size 14px

  @media screen and (max-width: 480px)
    font-size 12px

body
  font-size inherit
  font-family inherit
  font-weight inherit

  &.noscroll
    overflow hidden

    &::after
      content ' '
      opacity 1
      z-index 9

#page
  margin 0
  overflow hidden
  padding 0

@import 'partials/navbar'

@import 'partials/footer'